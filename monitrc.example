###############################################################################
## Monit control file
###############################################################################
 set daemon  120           # check services at 2-minute intervals
     with start delay 600  # optional: delay the first check by 10-minutes
 set log /var/log/monit.log
 set idfile /config/monit.id
 set statefile /config/monit.state
 set eventqueue
     basedir /config/eventqueue        # set the base directory where events will be stored
     slots 100                         # optionally limit the queue size

 set terminal batch

# Local access
 set httpd UNIXSOCKET /run/monit.sock
     allow monit:monitpasswordverysecure

# Remote access
 set httpd port 2812
     allow 127.0.0.1
     allow 172.16.0.0/12
     allow 10.0.0.0/8
     allow 192.168.0.0/16
